<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_team"
            android:textSize="14sp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/tvPosicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_position"
            android:textSize="14sp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_price"
            android:textSize="14sp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/tvPuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_points"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvEstadoJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_status"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgCamiseta"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/team_shirt_description" />

    <Button
        android:id="@+id/buttonComprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:backgroundTint="#C44C4C"
        android:text="Vender"
        android:textAllCaps="false"
        android:textColor="#3E4044" />

</LinearLayout>
