<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78C649"
    android:backgroundTint="#78C649">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="277dp"
        android:layout_height="35dp"
        android:layout_marginStart="178dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/audiowide"
        android:text="CREA TU CUENTA"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#3E4044"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="376dp"
        android:layout_height="453dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:background="#3E4044"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="34dp"
            android:layout_height="37dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="46dp"
            android:background="#3E4044"
            android:foregroundTint="#3E4044"
            android:tint="#77C549"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <EditText
            android:id="@+id/nomregis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="91dp"
            android:backgroundTint="#77C549"
            android:ems="10"
            android:hint="Nombre de usuario"
            android:inputType="text"
            android:textColor="#77C549"
            android:textColorHint="#77C549"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/correoregis"
            android:layout_width="206dp"
            android:layout_height="41dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="44dp"
            android:backgroundTint="#77C549"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="text"
            android:textColor="#77C549"
            android:textColorHint="#77C549"
            app:layout_constraintBottom_toTopOf="@+id/contraregis"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/nomregis" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="36dp"
            android:layout_height="25dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="13dp"
            android:background="#3E4044"
            android:tint="#77C549"
            app:layout_constraintEnd_toStartOf="@+id/correoregis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@android:drawable/ic_dialog_email" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="56dp"
            android:background="#3E4044"
            android:foregroundTint="#77C549"
            android:tint="#77C549"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:srcCompat="@android:drawable/ic_lock_idle_lock" />

        <EditText
            android:id="@+id/contraregis"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="91dp"
            android:backgroundTint="#77C549"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="#77C549"
            android:textColorHint="#77C549"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/correoregis" />

        <Button
            android:id="@+id/volvregis"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="95dp"
            android:backgroundTint="#77C549"
            android:text="Volver"
            android:textColor="#3E4044"
            android:textColorLink="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contraregis"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnregis"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="98dp"
            android:backgroundTint="#77C549"
            android:text="Registrarse"
            android:onClick="registrar"
            android:textColor="#3E4044"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/volvregis"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contraregis" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="302dp"
            android:layout_height="42dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="22dp"
            android:buttonTint="#77C549"
            android:text="Acepto todos los términos y condiciones"
            android:textColor="#77C549"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/volvregis" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>