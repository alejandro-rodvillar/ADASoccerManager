<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Contenido principal con menú inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#78C649"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Contenido scrollable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvGestionLigaTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestión de Liga"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#3E4044"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:id="@+id/tvNombreLiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Liga: "
                    android:textSize="18sp"
                    android:textColor="#3E4044"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCreadorLiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creador: "
                    android:textSize="18sp"
                    android:textColor="#3E4044"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvParticipantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Participantes: "
                    android:textSize="18sp"
                    android:textColor="#3E4044"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCodigoLiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Código de la Liga: "
                    android:textSize="18sp"
                    android:textColor="#3E4044"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnCompartirCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Compartir Código"
                    android:backgroundTint="#77C448"
                    android:textColor="#3E4044"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnSalirLiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salir de la Liga"
                    android:backgroundTint="#77C448"
                    android:textColor="#3E4044"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnEliminarLiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eliminar Liga"
                    android:backgroundTint="#77C448"
                    android:textColor="#3E4044"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <!-- Menú inferior -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:backgroundTint="#77C448"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </LinearLayout>

    <!-- NavigationView (menú lateral) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:backgroundTint="#FCF5FD"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
